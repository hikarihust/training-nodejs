<div class="alert alert-success" role="alert">
	<span class="close-btn">&times;</span>
	Thay đổi Status thành công
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				Search & Filter
				<a href="<%= systemConfig.prefixAdmin %>/items/all">
					<span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
				</a>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="status-list col-sm-6 pl0">
						<!-- Filter Status -->
						<% include ../../helpers/filter-status %>
						<%- filterStatusHelper(statusFilter, keyword) %>
					</div>
					<div class="col-sm-6">
						<form action="/<%= systemConfig.prefixAdmin %>/items/<%= currentStatus %>" method="GET">
							<div class="input-group">
								<input type="text" class="form-control" name="keyword" placeholder="Search for..."
									value="<%= keyword %>">
								<span class="input-group-btn">
									<button class="btn btn-info" type="submit">Search</button>
								</span>
								<span class="input-group-btn">
									<button class="btn btn-success" type="button"><a
											href="<%= systemConfig.prefixAdmin %>/items/<%= currentStatus %>">Clear</a></button>
								</span>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				List Items
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
					<div class="zcontrols">
						<select name="action" class="form-control slbAction">
							<option value="">Bulk Action</option>
							<option value="/<%= systemConfig.prefixAdmin %>/items/change-status/active">
								Active
							</option>
							<option value="/<%= systemConfig.prefixAdmin %>/items/change-status/inactive">
								InActive
							</option>
							<option value="/<%= systemConfig.prefixAdmin %>/items/save-ordering/">
								Change Ordering
							</option>
							<option value="/<%= systemConfig.prefixAdmin %>/items/delete/">
								Delete
							</option>
						</select>
						<button class="btn btn-info btnAction" type="button" id="btn-action" value="btnAction"
							disabled>Apply</button>
						<div class="pull-right">
							<a href="/<%= systemConfig.prefixAdmin %>/items/add" class="btn btn-warning btn-addNew">Add New
							</a>
						</div>
					</div>
					<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>
										<input type="checkbox" class="cbAll" />
									</th>
									<th>#</th>
									<th>Name</th>
									<th>Status</th>
									<th>Ordering</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% include ../../helpers/status %>
								<%	items.forEach((item, index) => { %>		
									<tr>
										<td>
											<input type="checkbox" name="cid" value="<%= item.id %>" />
										</td>
										<td>
											<%= index + 1 %>
										</td>
										<td>
											<%= item.name %>
										</td>
										<td>
											<%- statusHelper('items', item.status, item.id) %>
										</td>
										<td>
											<input type="number" value="<%= item.ordering %>" class="text-center ordering">
										</td>
										<td>
											<a href="#" type="button"
												class="btn btn-warning btn-sm">Edit</a>
											<a href="/<%= systemConfig.prefixAdmin %>/items/delete/<%= item.id %>" type="button"
												class="btn btn-danger btn-sm btn-delete">Delete</a>
										</td>
									</tr>
								<%	}) %>
							</tbody>
						</table>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-lg-12">
		<% include ../../helpers/pagination %>
		<%- paginationHelper(pagination,'items' , currentStatus, keyword) %>
	</div>
</div>