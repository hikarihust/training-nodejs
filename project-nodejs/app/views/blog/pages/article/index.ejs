<% include ./../../helpers/format-date %>
<% include ./../../helpers/format-summary %>
<%
    const folder_uploads = 'uploads/article/';
%>

<div class="col-lg-8 post-list">
    <%= JSON.stringify(itemArticle) %>

    <!-- Start single-post Area -->
    <div class="single-post-wrap">
        <div class="feature-img-thumb relative">
            <div class="overlay overlay-bg"></div>
            <img class="img-fluid" src="<%= folder_uploads + itemArticle.thumb %>" alt="<%= itemArticle.name %>">
        </div>
        <div class="content-wrap">
            <ul class="tags mt-10">
                <li><a href="/category/<%= itemArticle.category.id %>"><%= itemArticle.category.name %></a></li>
            </ul>
            <a href="#">
                <h3><%= itemArticle.name %></h3>
            </a>
            
            <ul class="meta pb-20">
                <li><a href="#"><span class="lnr lnr-user"></span><%= itemArticle.created.user_name %></a></li>
                <li><a href="#"><span class="lnr lnr-calendar-full"></span><%= formatDate(itemArticle.created.time) %></a></li>
            </ul>
            <p>
                <%- itemArticle.content %>
            </p>
        </div>
        <div class="relavent-story-post-wrap mt-30">
            <h4 class="title">Relavent Stories</h4>
            <div class="relavent-story-list-wrap">
                <div class="single-relavent-post row align-items-center">
                    <div class="col-lg-5 post-left">
                        <div class="feature-img relative">
                            <div class="overlay overlay-bg"></div>
                            <img class="img-fluid" src="frontend/img/r1.jpg" alt="">
                        </div>
                        <ul class="tags">
                            <li><a href="#">Lifestyle</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-7 post-right">
                        <a href="image-post.html">
                            <h4>A Discount Toner Cartridge Is
                                Better Than Ever.</h4>
                        </a>
                        <ul class="meta">
                            <li><a href="#"><span class="lnr lnr-user"></span>Mark wiens</a></li>
                            <li><a href="#"><span class="lnr lnr-calendar-full"></span>03 April, 2018</a></li>
                            <li><a href="#"><span class="lnr lnr-bubble"></span>06 Comments</a></li>
                        </ul>
                        <p class="excert">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- End single-post Area -->