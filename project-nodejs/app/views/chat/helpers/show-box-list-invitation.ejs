
<%
    showBoxListInvitation = (totalRequest, requestList) => {
        xhtml = ``;
        if(totalRequest > 0) {
            xhtmlButton = ``;

            for(let i = 0; i < totalRequest; i++){ 
                let request     = requestList[i];
                let userAvatar  = 'uploads/users/' + request.avatar;
                let username    = request.username;
                xhtml += `<div class="user-invite" >
                        <div  class="col-md-7 col-sm-7 col-xs-7 user-avatar">
                            <img class="contacts-list-img" src="${userAvatar}" alt="${username}">
                            <h5>${username}</h5>
                        </div>
                        <div class="col-md-5 col-sm-5 col-xs-5 btn-action-invite">
                            <button type="button" class="btn btn-block btn-primary">Accept</button>
                            <button type="button" class="btn btn-block btn-defaultt" >Deny</button>
                        </div>
                    </div>`;
            }
        }else {
             xhtml = `<p>You have 0 invitations</p>`;
        }
        
        return xhtml;
    } 
%>