<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Online</h3>
        <span class="badge bg-light-blue count" id="total-user"></span>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body" id="list-users"></div>
    <!-- /.box-body -->
</div>
<script type="text/javascript">
    $(function() {
        let $elmInputUsername = $('input[name="username"]');
        let $elmInputAvatar   = $('input[name="avatar"]');
        let $elmTotalUser	    = $('span#total-user');
        let $elmListUsers	    = $('div#list-users');

        let socket  = io.connect('http://localhost:8181');

        socket.on("connect", () => {
            socket.emit('USER_CONNECT', {
                username: $elmInputUsername.val(),
                avatar: $elmInputAvatar.val()
            });
        })

        socket.on("SERVER_SEND_ALL_LIST_USER", (data) => {
            let xhtml = '';
            for(let i = 0; i < data.length; i++) {
                let user = data[i];
                if(user.username !== $elmInputUsername.val()) {
                    xhtml += `<div class="user">
                            <div  class="col-md-8 user-avatar">
                                <img class="contacts-list-img" src="uploads/users/${user.avatar}"
                                    alt="${user.username}">
                                <h5>${user.username}</h5>
                            </div>
                            <div class="col-md-4"><button type="button" class="btn btn-block btn-primary btn-w btn-sm">Add friend</button></div>
                        </div>`;
                }
            }

            $elmListUsers.html(xhtml);
            $elmTotalUser.html(data.length - 1);
        })
    })
</script> 